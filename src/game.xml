<game>
	<assetPath>assets</assetPath>
	<tem name="fail" style="color: #f00; font-size: 2.5em;">
		FAIL
	</tem>
	<tem name="blue" style="color: #00f"></tem>
	<scene id="game">
		<display>
			<txt tem="blue" style="color: #0f0">ur parents r away from home! what will u do?</txt>
			<img style="width: 100px;">1.png</img>
			<txt>another line</txt>
			<img>2.png</img>
		</display>
		<options>
			<option scene="friends">
				<display>
					<txt>invite friends over</txt>
					<img>2.png</img>
				</display>
			</option>
			<option scene="outside">
				<display>
					<txt>go outside and play</txt>
				</display>
			</option>
			<option scene="indoors">
				<display>
					<txt>stay indoors and play</txt>
				</display>
			</option>
		</options>
	</scene>
	<scene id="friends">
		<display>
			<txt>what kind of friends?</txt>
		</display>
		<options>
			<option scene="school">
				<display>
					<txt>friends from school</txt>
				</display>
			</option>
			<option scene="block">
				<display>
					<txt>friends on the block</txt>
				</display>
			</option>
			<option scene="bfgf">
				<display>
					<txt>your bf/gf</txt>
				</display>
			</option>
		</options>
	</scene>
	<scene id="bfgf">
		<display>
			<txt>you invite your bf/gf over. what will u do?</txt>
		</display>
		<options>
			<option scene="bed">
				<display><txt>go to bed.</txt></display>
			</option>
			<option scene="friends">
				<display><txt>bak</txt></display>
			</option>
		</options>
	</scene>
	<scene id="bed" type="end">
		<display><txt>u go 2 bed.</txt></display>
		<options>
			<option scene="bfgf">
				<display>back</display>
			</option>
		</options>
	</scene>
	<scene id="school" type="end">
		<display>
			<txt>you invite friends from school and play.</txt>
		</display>
		<options>
			<option scene="friends">
				<display>back</display>
			</option>
		</options>
	</scene>
	<scene id="block" type="end">
		<display>
			<txt tem="fail"/>
			<txt tem="fail">u cant go outside</txt>
		</display>
		<options>
			<option scene="friends">
				<display>back</display>
			</option>
		</options>
	</scene>
	<scene id="outside" type="end">
		<display><txt>u go outside</txt></display>
		<options>
			<option scene="game">
				<display>back</display>
			</option>
		</options>
	</scene>
	<scene id="indoors">
		<display><txt>what will u do</txt></display>
		<options>
			<option scene="fire">
				<display><txt>commit arson</txt></display>
			</option>
			<option scene="outside">
				<display>go outside instead</display>
			</option>
		</options>
	</scene>
	<scene id="fire" type="end">
		<display><txt>u burn urself 2 death</txt></display>
		<options>
			<option scene="indoors">
				<display>back</display>
			</option>
		</options>
	</scene>
</game>
